@page
@model EstoqueAPI.Pages.IndexModel
@{
    ViewData["Title"] = "Gerenciamento de Estoque";
}

<div class="container">
    <h1>Gerenciamento de Estoque</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post">
        <div class="form-container">
            <input type="text" placeholder="Nome do Produto" asp-for="NovoProduto.Nome" />
            <input type="number" placeholder="Quantidade" asp-for="NovoProduto.Quantidade" />
            <input type="number" step="0.01" placeholder="Valor" asp-for="NovoProduto.Valor" />
            <div class="btn-group">
                <button type="submit" formaction="/Estoque?handler=Adicionar">Adicionar</button>
                <button type="submit" formaction="/Estoque?handler=Remover">Remover</button>
            </div>
        </div>
    </form>

    <div class="estoque-lista">
        <h2>Estoque Atual</h2>
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Quantidade</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model.Produtos)
                {
                    <tr>
                        <td>@produto.Nome</td>
                        <td>@produto.Quantidade</td>
                        <td>R$ @produto.Valor.ToString("F2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    .form-container {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .form-container input {
        padding: 10px;
        font-size: 1rem;
        flex: 1 1 200px;
    }

    .btn-group {
        display: flex;
        gap: 10px;
    }

    .btn-group button {
        padding: 10px 20px;
        font-size: 1rem;
        cursor: pointer;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
    }

    .btn-group button:hover {
        background-color: #0056b3;
    }

    .estoque-lista table {
        width: 100%;
        border-collapse: collapse;
    }

    .estoque-lista th, .estoque-lista td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    .estoque-lista th {
        background-color: #f2f2f2;
    }

    .alert-danger {
        color: red;
        margin-bottom: 10px;
    }
</style>